<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".displaySuksesDonasi">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:src="@drawable/berhasil">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:text="Selamat Donasi anda berhasil!"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="30dp">

    </TextView>
    <TextView
        android:layout_width="260dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Tunggu kedatangan petugas kami untuk mengambil buku anda  dirumah anda"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito"
        android:textSize="16dp">

    </TextView>

    <Button
        android:onClick="tolihatrincian"
        android:layout_width="335dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_rounded"
        android:text="Lihat Rincian Donasi"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/nunito_sans_bold"
        android:textSize="18dp"
        android:textStyle="bold"
        android:backgroundTint="#1D479E">

    </Button>


</LinearLayout>