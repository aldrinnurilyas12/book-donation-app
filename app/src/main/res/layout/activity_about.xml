<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".about">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="390dp"
            android:layout_height="325dp"
            android:layout_gravity="center"
            android:padding="5dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/ttg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:text="Tentang Aplikasi"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:text="@string/tentangapk"></TextView>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="390dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/ketentuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_extrabold"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="Ketentuan Buku"
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:text="@string/ketentuanbuku"></TextView>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:text="1.Buku tidak mengandung ujaran kebencian dan unsur sara.">

            </TextView>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="2.Buku baru atau pun lama asalkan layak baca, ">

            </TextView>

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nunito"
                android:padding="5dp"
                android:text="3.Buku Anak-anak (Buku Cerita/Dongeng, Komik, Puisi, Buku Pelajaran TK/SD, Buku Baca Dasar dan lanjut, dll) ">

            </TextView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>